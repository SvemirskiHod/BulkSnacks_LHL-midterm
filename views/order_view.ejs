<!DOCTYPE html>
<html lang="en">
  <head>
    <% include partials/_head%>
  </head>

  <body>
    <nav class="navbar navbar-inverse navbar-fixed-top">

      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar line"></span>
            <span class="icon-bar line"></span>
            <span class="icon-bar line"></span>
          </button>
          <a class="navbar-brand" href="/">BulkSnacks</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <% if (name) {%>
          <form class="navbar-form navbar-right" method="POST" action="/api/users/logout">
            <div class="form-group">
              Welcome, <strong><%= name %></strong>
            </div>
            <div class="form-group">
            </div>
            <button type="submit" class="btn btn-success">Log Out</button>
          </form>
          <% } else if (errors.badpass){ %>
          <form class="navbar-form navbar-right" method="POST" action="/api/admin/login">
            <div class="form-group">
              <input type="email" placeholder="email" name="email" class="form-control" autofocus>
            </div>
            <div class="form-group">
              <input type="password" placeholder="- wrong password! -" name="password" class="form-control">
            </div>
            <button type="submit" class="btn btn-success">Sign in</button>
          </form>
          <% } else if (errors.baduser) { %>
          <form class="navbar-form navbar-right" method="POST" action="/api/admin/login">
            <div class="form-group">
              <input type="email" placeholder="- invalid account! -" name="email" class="form-control" autofocus>
            </div>
            <div class="form-group">
              <input type="password" placeholder="password" name="password" class="form-control">
            </div>
            <button type="submit" class="btn btn-success">Sign in</button>
          </form>
          <% } else { %>
          <form class="navbar-form navbar-right" method="POST" action="/api/admin/login">
            <div class="form-group">
              <input type="email" placeholder="email" name="email" class="form-control" autofocus>
            </div>
            <div class="form-group">
              <input type="password" placeholder="password" name="password" class="form-control">
            </div>
            <button type="submit" class="btn btn-success">Sign in</button>
          </form>
          <% }; %>
        </div><!--/.navbar-collapse -->
      </div>
    </nav>
    <div class="jumbotron">
      <div class="container">
        <h2>hello, scoopmaster</h2>
        <p>Your order requests await.</p>
        <br><br>

      </div>
    </div>
    <div class="admin-view container">

      <div class="row">
          <div class="col-lg-12">
            <h2>all orders</h2>
            <table>
              <tr>
                <th>Order ID</th>
              </tr>
              <% orderInfo.forEach(function(lineItem) { %>
              <tr class="">
                <td><% lineItem.snackName %></td>
                <td><% lineItem.snackPrice %></td>
                <td><% lineItem.quantity %></td>
              </tr>
              <% }); %>
            </table>


          </div>
      <% include partials/_footer %>
    </div> <!-- /container -->

    <% include partials/_scripts %>

  </body>
</html>
