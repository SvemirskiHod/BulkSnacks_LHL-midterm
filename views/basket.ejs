<!DOCTYPE html>
<html lang="en">
  <head>
    <% include partials/_head%>
    <% include partials/_scripts %>

  </head>

  <body>
    <% include partials/_nav %>
    <div class="jumbotron">
      <div class="container">
        <% include partials/_header %>
        <% if(array.length === 0){ %>
        <h1>Looks like there's nothing here!</h1>
        <p>Please visit our snacks page and add some snacks to your basket.</p>
        <% } else{ %>
        <h2> Welcome to your basket </h2>
        <p>Have a look at the snacks you have already added.</p>
        <% }%>
        <p class="registration">Register in seconds for free <a href="/register">here</a></p>
       <!--  <p><a class="btn btn-primary btn-lg" href="#" role="button">Learn more &raquo;</a></p> -->
      </div>
    </div>

    <div class="container">
      <!-- Example row of columns -->
      <div class="row">

     <section class="products">
        <% snacks.forEach(function(elm, counter){ %>
          <div class="product-card">
            <div class="product-image">
              <img src="snack_images/<%= elm['img-filename']%>" alt="picture">
            </div>
            <div class="product-info">
              <h5> <%= elm.name%> </h5>
              <h6> Quantity: <%= Number(obj[array[counter]]) %> </h6>
              <button data-productid="<%=elm.id%>" class="delete-button"> Delete BUTTON</button>
            </div>
          </div>
            <% }) %>
        </section>

      <hr>

    <% include partials/_footer %>
    </div> <!-- /container -->



    <script src="scripts/retrieve_cart.js"></script>
  </body>
</html>
