<!DOCTYPE html>
<html lang="en">
  <head>
    <% include partials/_head%>
    <% include partials/_scripts %>
    <% %>
  </head>

  <body>
    <% include partials/_nav %>
    <div class="jumbotron">
      <div class="container">
        <% include partials/_header %>
        <% if(array.length === 0){ %>
        <h1>Looks like there's nothing here!</h1>
        <a href="/snacks"><p>Click here to start adding some snacks to your basket.</p></a>
        <% } else{ %>
        <h2> Welcome to your basket </h2>
        <p>Have a look at the snacks you have already added.</p>
        <% }%>
        <p class="registration">Register in seconds for free <a href="/register">here</a></p>
       <!--  <p><a class="btn btn-primary btn-lg" href="#" role="button">Learn more &raquo;</a></p> -->
      </div>
    </div>

    <div class="container">
      <!-- Example row of columns -->
      <div class="row">
      <!-- Bgin product template -->
     <section class="products">
        <% snacks.forEach(function(elm, counter){ %>
          <div class="product-card">
            <div class="product-image">
              <img src="snack_images/<%= elm['img-filename']%>" alt="picture">
            </div>
            <div class="product-info">
              <h4> <%= elm.name%> </h4>
              <h6>
                Quantity:
                <input id="<%=elm.id%>" type="number"
                       value="<%= Number(obj[array[counter]]) %>" class="qty"
                       min="1"/>
              </h6>
              <h6>Price per 100 grams:
                <span class="price">$<%= elm["price-per-100g"]/100 %> </span>
              </h6>
              <h6>Total: $
               <span class="product-total">
                  <%=Number(obj[array[counter]])*elm["price-per-100g"]/100 %>
               </span>
              </h6>
              <button  class="add-quantity"> Add Quantity</button>
              <button  class="reduce-quantity"> Reduce Quantity</button>
            </div>
          </div>
            <% }) %>
        </section>
        <!-- End product template -->
        <div>
          <h3>
            Sub-Total:
          </h3>
          <h2>
            Total:
          </h2>

        </div>
    <% include partials/_footer %>
    </div> <!-- /container -->



    <script src="scripts/basketscripts.js"></script>
  </body>
</html>
