<!DOCTYPE html>
<html lang="en">
  <head>
    <% include partials/_head%>

  </head>

  <body>
    <% include partials/_nav %>
    <div class="jumbotron">
      <div class="container">
        <% include partials/_header %>
        <p>Check out our awesome snack options!<br><br><br></p>
        <% include partials/_register_prompt %>
       <!--  <p><a class="btn btn-primary btn-lg" href="#" role="button">Learn more &raquo;</a></p> -->
      </div>
    </div>
    <div class="container">
      <!-- Example row of columns -->
      <h2>click the basket at the top anytime</h2><br>
      <div class="row">

        <section class="products">

        <% snacks.forEach(function(elm){ %>
          <div class="product-card">
            <div class="product-image">
              <img src="snack_images/<%= elm['img-filename']%>" alt="picture">
            </div>
            <div class="product-info">
              <h5> <%= elm.name%> </h5>
              <h6>$<%= elm["price"]/100 %> per 100g </h6>
              <button data-productid="<%=elm.id%>" class="btn btn-success add_item_button">Add 100g scoop</button>
            </div>
          </div>
            <% }) %>
        </section>

      </div>
      <hr>
      <% include partials/_footer %>
    </div> <!-- /container -->
    <% include partials/_scripts %>
    <script src="scripts/add_to_cart_button.js"></script>
  </body>




</html>
